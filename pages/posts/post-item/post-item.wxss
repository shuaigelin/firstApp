
.post {
  display: flex;
  flex-direction: column;
  width: 750rpx;
}

.post-img {
  width: 694rpx;
  height: 320rpx;
  margin: 32rpx 28rpx 24rpx 28rpx;
  border-radius: 15rpx;
}

.post-head {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  width:662rpx;
  height: 44rpx;
  margin:0 44rpx 8rpx 44rpx;
}

.title {
  font-size: 16px;
  color: #000;
  font-weight: bold;
}

.post-right{
  float:right;
  display: flex;
  flex-direction: row;
}

.post-icon{
  width:32rpx;
  height:32rpx;
  margin-right:16rpx;
  margin-top:6rpx;
}

.post-time {
  font-size: 12px;
  color: #bbb;
  letter-spacing: 0;
  line-height: 12px;
  margin-top:10rpx;
}

.post-main {
  font-family: PingFangSC-Regular;
  font-size: 13px;
  color: #7d7d7d;
  text-align: justify;
  line-height: 24px;
  margin-left:44rpx;
  margin-right:44rpx;
}